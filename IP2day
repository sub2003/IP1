public class IP2day{
    public static void main (String []args){
        System.out.println("Hello world!");

//Define variables and Cancatenate
/* Cancatenate means joining two or more strings together into string.*/ 
        String name="Subahnu";

        Integer age=22; //  int age= 22;

        Float GPA=4.0f; //float GPA=4.0f;

        Double length= 1.5; 
        // double is better than .
        //because double data tpe is represent much larager than float.
        //even thogh both data types represent numbers with decimals, but a float is 32 bits in size,
        //while double data type is is 64 bits in size

        System.out.println(name);
        System.out.println(age);
        System.out.println("I'm "+name+". I'm "+age+" years old.");
        System.out.println("My GPA is "+GPA+" .");
        System.out.println("The length is "+length+"m");

        boolean isStudent=true;
        System.out.println("Is he a Student? "+isStudent);
        //OR
        //boolean isStudent= 5<6;
        //System.out.println("Is he a student? "+isStudent); 
        


        //variable rules example
        int $age=23;
        System.out.println($age);
        int _=34;
        int age$=35;
        //int age!=67; cannot use !,@,#,%,^,&,*
        System.out.println(age$);

        String gap= "Between u and me";
        gap =" Between me and u";
        System.out.println(gap);

        /******this way is incorect 
        int science_marks=100;
        final science_marks=99;  ****** */

        final int science_marks=99;//corect way
        System.out.println(science_marks);
        
        final int maths_marks=100;
        //maths_marks=99; 
        /*Exception in thread "main" java.lang.Error: 
        Unresolved compilation problem: 
        The final local variable maths_marks cannot be assigned. It must be blank and not using a compound assignment */
        System.out.println ("maths_marks is "+maths_marks);


        int marks1=60;
        int marks2=50;
        System.out.println(marks1+marks2);
        //OR
        int total=marks1+marks2;
        System.out.println(total);
        // *******System.out.println("Total is "+marks1+marks2);*******  >  Total is 6050


        
    }
}       
